<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Books Page</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/books">Books</a>
    <a href="/authors">Authors</a>
    <a href="/books/add">Add Book</a>
    <a href="/authors/add">Add Author</a>
    <h1>Books Page</h1>
    <h3>Total Books:______</h3>
    <h3>Filter:</h3>
    <select>
      <option value="Genre">Genre</option>
      <option value="Genre1">Genre1</option>
      <option value="Genre2">Genre2</option>
    </select>
    <h3>Search:</h3>
    <form>
      <input type="text" placeholder="Search (genre)"name="" value="">
    </form>
    <% books.forEach((book) => { %>
      <a href="/books/<%= book['id'] %>"><img src="<%= book['Book Cover URL'] %>" alt="<%= book['Book Title'] %>" style="height:300px;width:300px;"/></a>
    <% }); %>
  </body>
</html>
