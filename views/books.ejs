<% include ./header %>
    <h1>Books Page</h1>
    <h3>Total Books:______</h3>
    <h3>Filter:</h3>
    <select>
      <option value="Genre">Genre</option>
      <option value="Genre1">Genre1</option>
      <option value="Genre2">Genre2</option>
    </select>
    <h3>Search:</h3>
    <form>
      <input type="text" placeholder="Search (genre)"name="" value="">
    </form>
    <div class="row">
      <% books.forEach((book) => { %>
        <div class="col s3">
          <div class="card large">
            <div class="card-image">
              <img src="<%= book['Book Cover URL'] %>">
            </div>
            <div class="card-content">
              <p><%= book['Book Description'] %></p>
            </div>
            <div class="card-action">
              <a href="/books/<%= book['id'] %>"><%= book['Book Title'] %></a>
            </div>
          </div>
        </div>
        <% }); %>
      </div>

  </body>
</html>
