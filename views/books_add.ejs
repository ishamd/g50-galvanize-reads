<% include ./header %>
    <h1>Add New Book</h1>
      <form method="POST" action="/books/add">
        <input type="text" name="title" id="new-title" value="" placeholder="Title" required><br>
        <input type="text" name="genre" id="new-genre" value="" placeholder="Genre" required><br>
        <input type="url" name="cover_url" id="new-cover-url" value="" placeholder="Cover Image URL" required><br>
        <textarea name="description" rows="5" cols="80" id="new-description" placeholder="Description" required></textarea><br>
        <select class="" name="authors">
          <% authors.forEach((author) => {%>
          <option name="authors" value="<%=author['id'] %>"><%=author['First Name'] + ' ' + author['Last Name'] %></option>
          <% }); %>
        </select><br>
        <button type="submit" class="">Add Book</button>
      </form>
  </body>
</html>
