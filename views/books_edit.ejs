<% include ./header %>
    <h1>Edit Book</h1>
      <h2><%=books[0]['Book Title']%></h2>
      <form method="POST" action="/books/<%=books[0]['id']%>/edit?_method=PATCH">

        <div class="">
          <input type="hidden" name="title" id="edit-title" value="<%=books[0]['Book Title']%>">
        </div>
        <div class="">
          <label for="edit-genre">Genre</label><br>
          <input type="text" name="genre" id="edit-genre" value="<%=books[0]['Book Genre']%>">
        </div>
        <div class="">
          <label for="edit-cover-url">Cover Image URL</label><br>
          <input type="url" name="cover_url" id="edit-cover-url" value="<%=books[0]['Book Cover URL']%>">
        </div>
        <div class="">
          <label for="edit-description">Description</label><br>
          <textarea name="description" rows="5" cols="80" id="edit-description"><%=books[0]['Book Description']%></textarea>
        </div>
        <button type="submit" class="">Update Book</button>
      </form>
  </body>
</html>
