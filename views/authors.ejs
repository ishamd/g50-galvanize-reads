<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Authors Page</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/books">Books</a>
    <a href="/authors">Authors</a>
    <a href="/books/add">Add Book</a>
    <a href="/authors/add">Add Author</a>
    <h1>Authors Page</h1>
    <% authors.forEach((author) => { %>
      <a href="/authors/<%= author['id'] %>"><img src="<%= author['Portrait URL'] %>" alt="<%= author['First Name'] %>" style="height:175px;width:150px;" /></a>
      <a href="/authors/<%= author['id'] %>"><p><%=author['First Name']+' '+author['Last Name']%></p></a>
      <p><%=author['Biography']%></p>
    <% }); %>
  </body>
</html>
