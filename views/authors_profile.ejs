<% include ./header %>
    <h1>Authors Profile Page</h1>
    <% authors.forEach((author) => { %>
      <img src="<%= author['Portrait URL'] %>" alt="<%= author['First Name'] %>" style="height:175px;width:150px;"/>
      <h2><%=author['First Name']+' '+author['Last Name']%></h2>
      <p><%=author['Biography']%></p>
      <p><strong>Books:</strong></p>
      <ol>
        <% for (let i = 0; i < authors.books.length; i++) { %>
        <a href="/books/<%=authors.books[i]['id'] %>"><li><%=authors.books[i]['Book Title']%></li></a>
        <% }; %>
      </ol>
    <% }); %>
    <a href="/authors/<%=authors[0]['id']%>/edit"><button type="button" class="btn btn-defualt">Edit</button></a>
    <form method="POST" action="/authors/<%=authors[0]['id']%>?_method=DELETE">
      <button type="submit" class="btn btn-defualt" onclick="Materialize.toast('This author has been removed', 4000)">Remove</button>
    </form>
  </body>
</html>
